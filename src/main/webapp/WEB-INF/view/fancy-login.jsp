<body>
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-t-55 p-b-20">
				<form:form action="${pageContext.request.contextPath}/authenticateTheUser" method="POST" class="login100-form validate-form">
					<span class="login100-form-title p-b-70">
						Welcome to the LK
					</span>
					<c:if test="${param.error != null}">
					<span class="login100-form-warning p-b-70">
						Sorry! Invalid Username or Password.
					</span>
					</c:if>
					<c:if test="${param.logout != null}">
					<span class="login100-form-logout p-b-70">
						You have been logged out.
					</span>
					</c:if>
					<span class="login100-form-avatar">
						<img src="${pageContext.request.contextPath}/resources/images/avatar-01.jpg" alt="AVATAR">
					</span>

					<div class="wrap-input100 validate-input m-t-85 m-b-35" data-validate = "Enter username">
						<input class="input100" type="text" name="username">
						<span class="focus-input100" data-placeholder="Username"></span>
					</div>

					<div class="wrap-input100 validate-input m-b-50" data-validate="Enter password">
						<input class="input100" type="password" name="password">
						<span class="focus-input100" data-placeholder="Password"></span>
					</div>

					<div class="container-login100-form-btn">
						<button class="login100-form-btn" type="submit">
							Login
						</button>
					</div>
